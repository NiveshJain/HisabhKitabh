<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/transaction_toolbar"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/appbar_color"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

<AutoCompleteTextView
    android:id="@+id/searchContactsTextView"
    android:layout_width="362dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_weight="0.50">

        <ImageView
            android:src="@drawable/bill_icon"
            android:layout_width="101dp"
            android:layout_height="92dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/description"
                android:hint="@string/Description"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableEnd="@drawable/camera_icon"
                android:drawableRight="@drawable/camera_icon"
                android:layout_weight="1" />

            <EditText
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/defaultbill"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/date_fragment"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="@string/pick_date"
        android:onClick="showDatePickerDialog"
        android:layout_gravity="center" />

</LinearLayout>

